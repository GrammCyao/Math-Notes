%Background style
\mdfdefinestyle{axiomstyle}{%Axiom
    outerlinewidth=1, roundcorner=10pt, leftmargin=40, rightmargin=40,%
    backgroundcolor=yellow!20, outerlinecolor=red!70!black,%
    innertopmargin=.5em, skipabove=1em,%
    splittopskip=\topskip,
}
\mdfdefinestyle{definitionstyle}{%Definition
    outerlinewidth=1, roundcorner=10pt, leftmargin=40, rightmargin=40,%
    backgroundcolor=yellow!40, outerlinecolor=red!70!black,%
    innertopmargin=.5em, skipabove=1em,%
    splittopskip = \topskip,
}
\mdfdefinestyle{propositionstyle}{%Proposition,Lemma,Theorem,Corollary
    outerlinewidth=1, roundcorner=10pt, leftmargin=40, rightmargin=40,%
    backgroundcolor=blue!10, outerlinecolor=red!70!black,%
    innertopmargin=.5em, skipabove=1em,%
    splittopskip = \topskip,
}
\mdfdefinestyle{examplestyle}{%Example
    outerlinewidth=1, roundcorner=10pt, leftmargin=40, rightmargin=40,%
    backgroundcolor=brown!15, outerlinecolor=red!70!black,%
    innertopmargin=.5em, skipabove=1em,%
    splittopskip=\topskip,
}

\theoremstyle{defstyle}%
\newtheorem*{pseudoaxiom}{Pseudo-Axiom}\surroundwithmdframed[style=axiomstyle]{pseudoaxiom}%unnumbering
\newmdtheoremenv[style=axiomstyle]{axiom}{Axiom}[chapter]
\newmdtheoremenv[style=definitionstyle]{definition}{Definition}[section]
\newmdtheoremenv[style=axiomstyle]{notation}[definition]{Notation}
\newmdtheoremenv[style=examplestyle]{example}[definition]{Example}

\theoremstyle{thmstyle}%
\newmdtheoremenv[style=propositionstyle]{proposition}[definition]{Proposition}
\newmdtheoremenv[style=propositionstyle]{theorem}[definition]{Theorem}
\newmdtheoremenv[style=propositionstyle]{lemma}[definition]{Lemma}
\newmdtheoremenv[style=propositionstyle]{corollary}[definition]{Corollary}


